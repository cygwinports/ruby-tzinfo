inherit rubygem

NAME="ruby-tzinfo"
VERSION=1.2.3
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby time zone database"
DESCRIPTION="TZInfo is a Ruby library that uses the standard tz (Olson)
database to provide daylight savings aware transformations between times in
different time zones."

ARCH=noarch

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_tzinfo_CONTENTS="${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_tzinfo_doc_CONTENTS=${RUBYGEM_DOCDIR#/}
